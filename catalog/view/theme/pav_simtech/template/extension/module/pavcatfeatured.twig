{% set id = random(1..9) + random() %}
	{% if categories is defined %}
		<div class="feature-category {{ prefix }}">
			{% if titles == 1 %}
				<div class="panel-heading">
					<div class="inner">
						<div class="panel-title">
							<h3>{{ box_heading }}</h3>
						</div>
						<span class="description">{{ description }}</span>
					</div>
				</div>
			{% endif %}
			<div class="{% if categories|length <= perview*rows %}swiper-no-swiping{% endif %}">
				<div class="row swiper-container swiper-containers" id="catfeatured{{id}}">
					<div class="swiper-wrapper">
						{% for category in categories %}
							<div class="swiper-slide ">	
								<div class="item-category text-center">
									<a href="{{ category.href }}">
										<div class="effect-v10">
											<div class="image text-center">
												{% if showimg %}
													<i class="{{ category.icon }}"></i>
												{% else %}
													<img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}" class="img-responsive"/>
												{% endif %}
											</div>
										</div>
										<div class="caption text-center {{ category.class }}">
											<h4 class="name">{{ category.name }}</h4>
										</div>
										<div class="label">
											<span>{{ category.items }}</span>
										</div>
									</a>
								</div>
							</div>
						{% endfor %}
					</div>
					<div class="swiper-pager">
						<div class="swiper-button-prev"></div>
						<div class="swiper-button-next"></div>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
	<script type="text/javascript"><!--
	$('#catfeatured{{id}}').swiper({
		pause: 'hover',
		nextButton: '.swiper-button-next',
		prevButton: '.swiper-button-prev',
		slidesPerView: {{ perview ? perview : 2 }},
		loop:{{ loop ? loop : 'false' }},
		autoplay:{{ auto_play_mode == "true" ? interval:'false' }},
		noSwipingClass: 'swiper-no-swiping',
		slidesPerColumn:{{ rows ? rows : 1 }},
		spaceBetween: 5,
		breakpoints: {
		    767: {
		      slidesPerView: 1,
		      {% if categories|length > 1*rows %}
		      noSwiping: false
		      {% endif %}
		    },
		    991: {
		      slidesPerView: 2,
		      {% if categories|length > 2*rows %}
		      noSwiping: false
		      {% endif %}
		    }, 
		}
	});
--></script> 