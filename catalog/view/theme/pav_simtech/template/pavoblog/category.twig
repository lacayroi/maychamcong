{{ header }}
<div class="breadcrumbs">
  <div class="container container-large">
    <div class="breadcrumb-wrapper">
      <ol class="space-padding-t30 text-center" data-itemprop="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      </ol>
    </div>
  </div>
</div>
<div id="pavoblog-posts" class="container">
    {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
        {% set class = 'col-md-6 col-sm-6' %}
        {% elseif column_left or column_right %}
        {% set class = 'col-md-9 col-sm-8' %}
        {% else %}
        {% set class = 'col-md-12 col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">
            {{ content_top }}

            {% if ( archive_heading ) %}
                <h2>{{ archive_heading }}</h2>
            {% endif %}

            {% if ( archive_description ) %}
                <div class="pavoblog-cat-description">
                    {{ archive_description }}
                </div>
            {% endif %}

            {% if posts %}
                {# main container #}
                <div class="row pavoblog-posts archive">
                    {% for post in posts %}
                        {% include ( 'pavoblog/content-' ~ layout ~ '.twig' ) %}
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-sm-6 text-left">{{ pagination }}</div>
                    <div class="col-sm-6 text-right">{{ results }}</div>
                </div>
                {# end main container #}
            {% else %}
                <p>{{ text_post_empty }}</p>
            {% endif %}

            {{ content_bottom }}
        </div>
        {{ column_right }}</div>
</div>

{{ footer }}